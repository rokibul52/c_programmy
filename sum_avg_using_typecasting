#include<stdio.h>
int main(){
    int num1,num2,num3,sum;
    float avg;
    printf("Enter any two numbers:");
    scanf("%d%d",&num1,&num2);
    sum=num1+num2;
    printf("The sum is:%d\n",sum);
    avg=(float)sum/2;//type casting has been done in this line.
    printf("The average is : %f",avg);

    return 0;
}
