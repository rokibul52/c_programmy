//second method
#include<stdio.h>
#include<math.h>

int main(){
    float area,radius;
    printf("Enter radius :");
    scanf("%f",&radius);
   area=M_PI*radius*radius;
    printf("The area of the circle is:%.2f\n",area);
   

    return 0;
}
