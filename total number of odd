#include<stdio.h>
int main()
{
    int num[]={1,10,5,463,5,54,52};
    int size=sizeof(num)/sizeof(num[0]);
    int sum=0,count=0;
    printf("%d is the size of array.",size);
    for(int i=0; i<size; i++)
    {
        if(num[i]%2==0)
        {
            printf("%d ",num[i]);
            sum=sum+num[i];
            count=count+1;
        }
    }
    printf("\n%d is sum of all odd numbers and %d is the total number of all odd number.",sum,count);
}
